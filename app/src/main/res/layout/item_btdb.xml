<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_btdb"
    android:clickable="true"
    android:minHeight="60dp">

    <TextView
        android:id="@+id/tv_btdb_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/light_blue_300" />

    <TextView
        android:id="@+id/tv_btdb_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:textColor="@android:color/black"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tv_btdb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_btdb_size"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_btdb_addTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_btdb_title"
        android:padding="5dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_btdb_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_btdb_title"
        android:padding="5dp"
        android:textColor="@android:color/black" />

</RelativeLayout>